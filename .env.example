# WeeWix Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# Application Settings
# ============================================================================
RUST_LOG=info
RUST_BACKTRACE=1

# ============================================================================
# Station Configuration
# ============================================================================
STATION_ID=home
STATION_TIMEZONE=America/Chicago
STATION_FORMAT=ecowitt

# ============================================================================
# HTTP Server
# ============================================================================
HTTP_BIND=0.0.0.0:8080
WEEWIX_HTTP_PORT=8080

# ============================================================================
# UDP Interceptor (for devices broadcasting UDP)
# ============================================================================
UDP_BIND=0.0.0.0:9999
WEEWIX_UDP_PORT=9999

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=mariadb
DB_PORT=3306
DB_PORT_EXTERNAL=3306
DB_NAME=weewx
DB_USER=weewx
DB_PASS=weewxpass
DB_ROOT_PASS=rootpass

# Database volume path (for 600GB storage)
# This should point to a directory with sufficient disk space
DB_VOLUME_PATH=./data/mysql

# ============================================================================
# Logging
# ============================================================================
INSERT_LOGGING=true
LOG_LEVEL=info

# ============================================================================
# GW1100 Mock Device Settings (for testing)
# ============================================================================
MOCK_POST_INTERVAL=5
MOCK_WEEWIX_URL=http://172.25.0.20:8080/data

# ============================================================================
# Timezone
# ============================================================================
TIMEZONE=America/Chicago

# ============================================================================
# Optional: File System Sink
# ============================================================================
# FS_DIR=/var/lib/weewx/data

# ============================================================================
# Optional: InfluxDB Integration
# ============================================================================
# INFLUX_URL=http://influxdb:8086
# INFLUX_ORG=my-org
# INFLUX_BUCKET=weewx
# INFLUX_TOKEN=your-influxdb-token

# ============================================================================
# Security Notes
# ============================================================================
# - Change all passwords before deploying to production
# - Never commit .env to version control
# - Use strong passwords for DB_PASS and DB_ROOT_PASS
# - Restrict network access to database port in production
